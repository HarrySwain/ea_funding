---
export interface Props {
  heading: string;
  content: string;
  usps: usp[];
}
export type usp = {
  icon: string;
  heading: string;
  content: string;
};

const { heading, content, usps } = Astro.props;

//TODO
//change icons to tick
---

<section>
  <div class="max-w-screen-xl px-4 py-4 sm:py-12 sm:px-6 lg:py-16 lg:px-8">
    <div class="max-w-xl mx-auto">
      <h2 class="text-3xl font-bold sm:text-4xl text-center">{heading}</h2>
      <p class="mt-4">
        {content}
      </p>
    </div>

    <div
      class="mt-8 grid grid-cols-1 gap-8 md:mt-16 md:grid-cols-2 md:gap-12 lg:grid-cols-3"
    >
      {
        usps.map((usp) => (
          <div class="flex items-start gap-4 bg-primary-100 rounded-lg shadow-md">
            <div class="px-4 py-4">
              <h2 class="text-lg font-bold border-b-2 border-b-primary-300">{usps.indexOf(usp) + 1}.</h2>

              <p class="mt-1 text-sm">{usp.content}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
