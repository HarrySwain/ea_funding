---
export interface Props {
	imageUrl: string,
  title: string,
  content: string,
}

const { imageUrl, title, content } = Astro.props;

---
<article class="overflow-hidden rounded-lg shadow transition hover:shadow-lg max-w-sm">
  <img
    alt="office"
    src={imageUrl}
    class="h-56 w-full object-cover"
  />

    <a href="#">
      <h3 class="mt-0.5 text-lg text-gray-900">
        {title}
      </h3>
    </a>

    <p class="mt-2 line-clamp-3 text-sm/relaxed text-gray-500">
      {content}
    </p>
  </div>
</article>
