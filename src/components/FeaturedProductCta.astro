---
export interface Props {
	image: string,
  title: string,
  content: string,
  buttonText: string,
  buttonLink: string,
}

const { image, title, content, buttonLink, buttonText } = Astro.props;
---

<section
  class="overflow-hidden bg-cover bg-top bg-no-repeat bg-blend-darken"
  style={`background-image: url(${image});`}
>
  <div class="bg-black/25 p-8 md:p-12 lg:px-16 lg:py-24">
    <div class="text-left">
      <h2 class="text-2xl font-bold text-white sm:text-3xl md:text-5xl">
        {title}
      </h2>

      <p
        class="hidden max-w-lg text-white/90 md:mt-6 md:block md:text-lg md:leading-relaxed"
      >
        {content}
      </p>

      <div class="mt-4 sm:mt-8">
        <a
          href={buttonLink}
          #a6ce39
          class="inline-block rounded-full bg-lime-300 px-12 py-3 text-sm font-medium text-white transition hover:bg-lime-400 focus:outline-none focus:ring focus:ring-yellow-400"
        >
          {buttonText}
        </a>
      </div>
    </div>
  </div>
</section>
