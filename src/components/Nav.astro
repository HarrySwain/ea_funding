<script>
  const button = document.getElementById('button')
  const hamburgerMenu = document.getElementById('hamburgerMenu')

  function toggleMenu() {
    if (button && hamburgerMenu) {
      if (hamburgerMenu.style.display === 'none' || hamburgerMenu.style.display === '') {
        hamburgerMenu.style.display = 'block';
      } else {
        hamburgerMenu.style.display = 'none';
      }
    }
  }

  function hideMenuOnWideScreen() {
    if (hamburgerMenu) {
      if (window.innerWidth > 768 && hamburgerMenu.style.display !== 'none') {
        hamburgerMenu.style.display = 'none';
      }
    }
  }

  if (button) {
    button.addEventListener('click', toggleMenu)
  }

  window.addEventListener('resize', hideMenuOnWideScreen);

</script> 
